<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kayuho.randomfacts">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CrazyFactsActivity"
            android:label="Random Crazy Facts"
            android:parentActivityName="com.example.kayuho.randomfacts.CrazyFactsActivity"
            />
        <activity android:name=".SportsFactsActivity"
            android:label="Random Sports Facts"
            android:parentActivityName="com.example.kayuho.randomfacts.SportsFactsActivity"
            ></activity>
    </application>

</manifest>
